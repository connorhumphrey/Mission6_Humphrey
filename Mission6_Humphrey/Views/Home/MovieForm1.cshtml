@model Submission1

<head>
    <title>Movie Form</title>
</head>

<h1>Add a Movie to the Database</h1>
<br />

<form method="post">
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        <option value=""> -- </option>
        <option value="1">Miscellaneous</option>
        <option value="2">Drama</option>
        <option value="3">Television</option>
        <option value="4">Horror/Suspense</option>
        <option value="5">Comedy</option>
        <option value="6">Family</option>
        <option value="7">Action/Adventure</option>
        <option value="8">VHS</option>
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" type="number" />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value=""> -- </option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited">
        <option value=""> -- </option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex?</label>
    <select asp-for="CopiedToPlex">
        <option value=""> -- </option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25"/>
    <br />
    <br />
    <button type="submit">Submit</button>

</form>
