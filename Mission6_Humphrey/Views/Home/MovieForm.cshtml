@model Submission

<head>
    <title>Movie Form</title>
</head>

<h1>Add a Movie to the Database</h1>
<br />

<form method="post">
    <label asp-for="Category">Category (required)</label>
    <input asp-for="Category" required/>
    <br />
    <label asp-for="Title">Title (required)</label>
    <input asp-for="Title" required/>
    <br />
    <label asp-for="Year">Year (required)</label>
    <input asp-for="Year" required/>
    <br />
    <label asp-for="Director">Director (required)</label>
    <input asp-for="Director" required />
    <br />
    <label asp-for="Rating">Rating (required)</label>
    <select asp-for="Rating" required>
        <option value=""> -- </option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value=""> -- </option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25" />
    <br />
    <br />
    <button type="submit">Submit</button>





</form>